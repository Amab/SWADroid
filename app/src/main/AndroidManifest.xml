            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="es.ugr.swad.swadroid.modules.rollcall.Rollcall"/>
        </activity>
        <activity
                android:name=".modules.rollcall.UsersDownload"
                android:label="@string/rollcallModuleLabel"
