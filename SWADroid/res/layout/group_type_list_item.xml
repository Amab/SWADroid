<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_goose"
    android:padding="5dp" >

    <TextView
        android:id="@+id/groupTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/padlockIcon"
        android:layout_toEndOf="@id/padlockIcon"
        android:paddingLeft="35dp"
        android:paddingStart="35dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
    	android:textStyle="bold" />

    <TextView
        android:id="@+id/openTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupTypeText"
        android:layout_toRightOf="@id/padlockIcon"
        android:layout_toEndOf="@id/padlockIcon"
        android:paddingLeft="35dp"
        android:paddingStart="35dp"
        android:paddingRight="0dp"
        android:paddingEnd="0dp"
        android:textColor="@android:color/black"
        android:visibility="gone" />

</RelativeLayout>