<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/users_listview"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_above="@+id/acceptList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/background" >

    </ListView>

    <ImageButton
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_action_search" />

    <Button
        android:id="@+id/acceptList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/cancelList"
        android:layout_marginLeft="80dp"
        android:text="@string/acceptMsg" />

    <Button
        android:id="@+id/cancelList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/filter"
        android:text="@string/cancelMsg" />

</RelativeLayout>
